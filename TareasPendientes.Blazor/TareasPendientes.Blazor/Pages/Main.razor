@page "/"
@inject IDataSave dataSave
@if(context==null)
{
    <text>Cargando...</text>
}
else
{
    
}


@code {

    Context context { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        context = Context.Load(dataSave.Load());

    }
    public void Save()
    {
        dataSave.Save(context.ToXmlDocument().OuterXml);
    }

}

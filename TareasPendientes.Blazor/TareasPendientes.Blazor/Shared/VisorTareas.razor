@if (Lista != null)
{
  
    @foreach (Tarea tarea in Lista)
    { 
        <VisorTarea Class="@(GetNext() % 2 == 0 ? "par" : "impar")" IdTarea="tarea.Id" Lista="Lista" EditMode="EditMode" OnClick="OnClick" MostrarCheckHecho="MostrarCheckHecho"/>
       
    }
}

@code {
    [Parameter] public Lista Lista { get; set; }
    [Parameter] public bool EditMode { get; set; }
    [Parameter] public EventCallback<long> OnClick { get; set; }
    [Parameter] public bool MostrarCheckHecho { get; set; } = true;
    int i;
    protected override bool ShouldRender()
    {
        i = -1;
        return base.ShouldRender();
    }
    int GetNext() => ++i;
}

@inherits LayoutComponentBase
@inject IDataSave dataSave

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <button class="btn-save float-left" @onclick="@(()=>Save())" disabled="@(disabled)">Guardar</button>
        <a href="https://github.com/tetradogpwa/TareasPendientes" target="_blank" class="ml-md-auto">Sobre</a>

    </div>

    <div class="content px-4">
        <CascadingValue Value="context">
            @Body
        </CascadingValue>
    </div>
</div>

@code{
    Context context;
    bool disabled = false;
    protected override void OnInitialized()
    {
        string data = null;//dataSave.Load();
        base.OnInitialized();
        context = Context.Load(data);
    }

    public void Save()
    {
        try
        {
            disabled = true;
            dataSave.Save(context.ToXmlDocument().OuterXml);
        }
        catch { }
        finally
        {
            disabled = false;
        }
    }
}

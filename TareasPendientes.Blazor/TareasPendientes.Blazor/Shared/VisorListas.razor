@if (Listas != null)
{
    @for (int i = 0; i < Listas.Count; i++)
    {
        <VisorLista Lista="Listas[i]" OnClick="OnClick"/>
        <br/>
    }

}
@*Por si quieren poner un boton para añadir o un check box para borrar al hacer click *@
@if (ChildContent != null)
{
    @ChildContent
}

@code {
    [Parameter] public List<Lista> Listas { get; set; }
    [Parameter] public EventCallback<Lista> OnClick { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}
